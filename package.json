{
  "name": "keywordflow-wdio-js-template",
  "version": "2.0.1",
  "description": "End-to-end test automation framework starter",
  "keywords": [
    "WebdriverIO",
    "Cucumber"
  ],
  "author": "Exadel",
  "repository": "https://gitlab.exadel.com/qaap/keywordflow-for-js/keywordflow-wdio-js",
  "license": "MIT",
  "dependencies": {
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.5.0",
    "deep-diff": "^1.0.2",
    "jsonfile": "^6.1.0",
    "jsonpath": "^1.1.1",
    "jsonschema": "^1.4.1",
    "keywordflow-wdio-js-lib": "git+ssh://git@gitlab.exadel.com:qaap/keywordflow-for-js/keywordflow-wdio-js-lib.git",
    "sharp": "^0.31.0",
    "wdio-syngrisi-cucumber-service": "^1.0.26",
    "xlsx": "^0.18.5",
    "yargs": "^17.5.1"
  },
  "scripts": {
    "lint": "eslint src/. --fix",
    "configure-globals": "npm run config/configure-globals.js",
    "test-visual": "wdio wdio.vrt.conf.js --instances=1 --tag=@visual",
    "test-local": "wdio wdio.local.conf.js --tag=@debug --instances=1",
    "test-setup": "wdio wdio.local.conf.js --tag=@example --instances=1",
    "test-demo": "wdio wdio.local.conf.js --tag=@demo --instances=1",
    "test-sauceLab": "wdio wdio.sauce.conf.js",
    "test-local-mobile": "wdio wdio.local.conf.js --tag=@mobile --DEVICE_TYPE=mobile --DEVICE_NAME=\"Galaxy S5\" --HEADLESS=false --BROWSER_NAME=chrome",
    "test-local-api": "wdio wdio.local.conf.js --tag=@api --HEADLESS=true",
    "test-smoke": "wdio wdio.ci.conf.js --instances=3 --tag=\"@smoke and (not @visual)\"",
    "test-smoke-headless": "wdio wdio.ci.conf.js --instances=3 --tag=@smoke --HEADLESS=true",
    "test-aws": "wdio wdio.conf.aws.js",
    "test-task2": "wdio wdio.local.conf.js --tag=@task2 --instances=1",
    "updateScreenshots": "node ./update-screenshots.js all",
    "allure:generate": "allure generate results -o ../locators-hotspots-chrome-plugin-master/allure-report --clean",
    "allure:open": "allure generate results -o results/allure-report --clean && allure open results/allure-report"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/register": "^7.18.9",
    "@wdio/allure-reporter": "^7.24.0",
    "@wdio/cli": "^7.24.0",
    "@wdio/cucumber-framework": "^7.24.0",
    "@wdio/devtools-service": "^7.24.0",
    "@wdio/local-runner": "^7.24.0",
    "@wdio/sauce-service": "^7.24.0",
    "@wdio/selenium-standalone-service": "^7.24.0",
    "@wdio/spec-reporter": "^7.24.0",
    "allure-commandline": "2.17.2",
    "chromedriver": "*",
    "eslint": "^8.23.1",
    "geckodriver": "*",
    "lint-staged": "^13.0.3",
    "multiple-cucumber-html-reporter": "^2.0.0",
    "semver": "^7.3.7",
    "wdio-chromedriver-service": "7.3.2",
    "wdio-cucumberjs-json-reporter": "^4.4.1",
    "wdio-geckodriver-service": "^3.0.5",
    "wdio-intercept-service": "^4.2.2",
    "webdriverio": "^7.24.0"
  }
}
